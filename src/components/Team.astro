---
import { Image } from 'astro:assets';
const members = [
  {
    name: 'Albert Flores',
    role: 'VP of Sales',
    image: 'https://randomuser.me/api/portraits/men/32.jpg'
  },
  {
    name: 'Theresa Webb',
    role: 'Business Development Manager',
    image: 'https://randomuser.me/api/portraits/women/44.jpg'
  },
  {
    name: 'Savannah Nguyen',
    role: 'Director of Product',
    image: 'https://randomuser.me/api/portraits/women/68.jpg'
  },
  {
    name: 'Daniel Murphy',
    role: 'Business Analyst',
    image: 'https://randomuser.me/api/portraits/men/85.jpg'
  },
  {
    name: 'Darrell Steward',
    role: 'Director of Sales',
    image: 'https://randomuser.me/api/portraits/men/77.jpg'
  }
];
---

<section id="team" class="w-full px-16 py-24 grid grid-cols-4">
  <div class="col-span-2 flex flex-col justify-center">
    <h2 class="text-4xl font-extrabold mb-4">Join Our Team</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-6 font-medium">
      Enim esse do dolore commodo ullamco adipisicing dolor aliqua magna sint occaecat. Veniam cillum sit nulla consectetur do ut. Eiusmod dolor enim dolor et labore. Commodo quis occaecat incididunt irure.
    </p>
    <a href="#form-container" class="inline-flex text-cm-500 hover:underline font-semibold">
      In sit adipisicing laborum est commodo. ↗
    </a>
  </div>

  {members.slice(0, 2).map((member, i) => (
    <div
      id={`member-${i}`}
      class={`overflow-hidden aspect-square shadow-md transition-transform duration-300 ease-in-out hover:scale-105 ${i === 1 ? 'rounded-tr-2xl' : ''}`}
    >
      <img
        src={member.image}
        alt={member.name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  ))}

  <div class="col-span-1 flex flex-col justify-center">
    <h2 class="text-3xl font-bold mb-4">Qui dolor occaecat.</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-6 font-medium">
      Esse irure reprehenderit dolor deserunt duis et proident irure commodo do.
    </p>
    <a href="#form-container" class="inline-flex text-cm-500 hover:underline font-semibold">
      Edipisicing ad. ↗
    </a>
  </div>

  {members.slice(2).map((member, i) => (
    <div
      id={`member-${i + 2}`}
      class={`overflow-hidden aspect-square shadow-md transition-transform duration-300 ease-in-out hover:scale-105 ${i === 2 ? 'rounded-br-2xl' : ''}`}
    >
      <img
        src={member.image}
        alt={member.name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  ))}
</section>
