---
import { Image } from 'astro:assets';
const members = [
  {
    name: 'Albert Flores',
    role: 'VP of Sales',
    image: 'https://randomuser.me/api/portraits/men/32.jpg'
  },
  {
    name: 'Theresa Webb',
    role: 'Business Development Manager',
    image: 'https://randomuser.me/api/portraits/women/44.jpg'
  },
  {
    name: 'Savannah Nguyen',
    role: 'Director of Product',
    image: 'https://randomuser.me/api/portraits/women/68.jpg'
  },
  {
    name: 'Daniel Murphy',
    role: 'Business Analyst',
    image: 'https://randomuser.me/api/portraits/men/85.jpg'
  },
  {
    name: 'Darrell Steward',
    role: 'Director of Sales',
    image: 'https://randomuser.me/api/portraits/men/77.jpg'
  }
];
---

<section id="team" class="w-full bg-gray-100 dark:bg-dark py-24 text-gray-900 dark:text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-5 gap-8 items-start">
      
      <!-- Text content -->
      <div class="md:col-span-2 space-y-4">
        <h2 class="text-3xl font-bold sm:text-4xl">Meet the Team</h2>
        <p class="text-gray-600 dark:text-gray-300 text-base">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officiis, optio.
        </p>
        <a href="#form-container" class="inline-flex text-cm-500 hover:underline font-medium">
          See All Members â†—
        </a>
      </div>

      <!-- Members -->
      <div class="md:col-span-3 grid grid-cols-2 gap-4">
        {
          members.map((member, index) => (
            <div class="relative rounded-lg overflow-hidden shadow-md group member-card" id={`member-${index}`}>
              <img src={member.image} alt={member.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" />
              <div class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/70 via-black/40 to-transparent p-4">
                <h3 class="text-white font-semibold text-sm">{member.name}</h3>
                <p class="text-white/80 text-xs">{member.role}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script type="module">
  import { gsap } from 'https://cdn.skypack.dev/gsap';

  gsap.from("#team h2", {
    y: 30,
    opacity: 0,
    duration: 1,
    ease: "power2.out"
  });

  gsap.from("#team p", {
    y: 20,
    opacity: 0,
    delay: 0.2,
    duration: 0.8
  });

  // Animar cada miembro del equipo
  for (let i = 0; i < 5; i++) {
    gsap.from(`#member-${i}`, {
      opacity: 0,
      y: 30,
      delay: 0.4 + i * 0.2,
      duration: 0.8,
      ease: "power2.out"
    });
  }
</script>
