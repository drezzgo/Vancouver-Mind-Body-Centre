---
import { Image } from 'astro:assets';

import Kyle from '../assets/images/team/kyle.webp';
import Natan from '../assets/images/team/natan.webp';
import Ryan from '../assets/images/team/ryan.webp';
import Tim from '../assets/images/team/tim.webp';
import Yelena from '../assets/images/team/yelena.webp';

const {
  title = 'Join Our Team',
  subtitle = 'Enim esse do dolore commodo ullamco adipisicing dolor aliqua magna sint occaecat...',
  ctaText = 'In sit adipisicing laborum est commodo. ↗',
  sectionId = 'team'
} = Astro.props;

const members = [
  { name: 'Albert Flores', role: 'VP of Sales', image: Kyle },
  { name: 'Theresa Webb', role: 'Business Development Manager', image: Natan },
  { name: 'Savannah Nguyen', role: 'Director of Product', image: Ryan },
  { name: 'Daniel Murphy', role: 'Business Analyst', image: Tim },
  { name: 'Darrell Steward', role: 'Director of Sales', image: Yelena },
];
---

<section id={sectionId} class="w-full px-4 md:px-16 py-16 md:py-24 grid grid-cols-1 md:grid-cols-4">
  <div class="col-span-2 flex flex-col justify-center">
    <h2 class="text-4xl font-extrabold mb-4">{title}</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-6 font-medium">
      {subtitle}
    </p>
    <a href="#form-container" class="inline-flex text-cm-500 hover:underline font-semibold">
      {ctaText}
    </a>
  </div>

  {members.slice(0, 2).map((member, i) => (
    <div
      id={`member-${i}`}
      class={`overflow-hidden aspect-square shadow-md transition-transform duration-300 ease-in-out hover:scale-105 ${i === 1 ? 'rounded-tr-2xl' : ''}`}
    >
      <Image
        src={member.image}
        alt={member.name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  ))}

  <div class="col-span-1 flex flex-col justify-center">
    <h2 class="text-3xl font-bold mb-4">Qui dolor occaecat.</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-6 font-medium">
      Esse irure reprehenderit dolor deserunt duis et proident irure commodo do.
    </p>
    <a href="#form-container" class="inline-flex text-cm-500 hover:underline font-semibold">
      Edipisicing ad. ↗
    </a>
  </div>

  {members.slice(2).map((member, i) => (
    <div
      id={`member-${i + 2}`}
      class={`overflow-hidden aspect-square shadow-md transition-transform duration-300 ease-in-out hover:scale-105 ${i === 2 ? 'rounded-br-2xl' : ''}`}
    >
      <Image
        src={member.image}
        alt={member.name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  ))}
</section>
