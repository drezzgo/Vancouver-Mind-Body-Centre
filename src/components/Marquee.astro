---
export interface Props {
  items: string[]; // los trozos de texto/símbolo que quieras repetir
  speed?: number;  // duración en segundos de un ciclo completo
}

const {
  items = ['TEAM TRAINING', '★', 'LIFE CHANGING'],
  speed = 15
} = Astro.props;
---

<section aria-hidden="true" class="overflow-hidden whitespace-nowrap bg-old-brick-900 py-2 my-12">
  <!-- Duplicamos los items para lograr loop continuo -->
  <div class="inline-flex animate-marquee py-2" style={`--marquee-duration: ${speed}s`}>
    {items.map((text) => (
      <span class="mx-8 text-white font-semibold tracking-wider">{text}</span>
    ))}
    {items.map((text) => (
      <span class="mx-8 text-white font-semibold tracking-wider">{text}</span>
    ))}
  </div>
  <div class="p-2 bg-white"/>
</section>

<style >
@keyframes marquee {
  0%   { transform: translateX(0%); }
  100% { transform: translateX(-50%); }
}
/* Tailwind no tiene animate-marquee por defecto, así que lo definimos aquí */
.animate-marquee {
  animation: marquee var(--marquee-duration) linear infinite;
}
</style>
