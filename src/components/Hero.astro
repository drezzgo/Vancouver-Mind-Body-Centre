---
import { Image } from 'astro:assets';
import HeroImage from '../assets/hero.webp';
const hero = {
  headline: "Non nisi commodo nisi ex cillum id",
  description: "Non adipisicing ea est irure nulla ipsum qui sit reprehenderit aliquip anim consectetur. Dolor excepteur excepteur enim amet.",
  cta: {
    label: "Agendar clase gratuita",
    href: "#form-container"
  },
  image: {
    alt: "Eiusmod officia quis occaecat officia mollit mollit officia sint."
  }
};
---

<section class="w-full px-16 flex flex-col gap-10">
  <div class="w-1/2">
    <h1 class="text-7xl font-extrabold">
      VANCOUVER<br/>
      MIND BODY CENTRE
    </h1>
    <p class="text-2xl mt-4 font-semibold">
      Group Fitness | Personal Training | Martial Arts
    </p>
  </div>
  <div class="w-full flex justify-end">
    <p class="w-1/3 text-justify indent-6 font-semibold">
      Quis id ex adipisicing tempor id aliqua sit eu voluptate irure. Laboris qui ut incididunt laboris. Ad elit incididunt proident laboris commodo. Exercitation dolore est magna irure. 
    </p>
  </div>
  <div class="mt-12 flex justify-center">
    <svg  id="scroll-arrow" xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-compact-down"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 11l8 3l8 -3" /></svg>
  </div>
</section>

<section class="w-full py-20 bg-white dark:bg-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row items-center justify-between gap-12">
    
    <!-- Texto -->
    <div class="max-w-xl space-y-6">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white leading-tight">
        {hero.headline}
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300">{hero.description}</p>
      <a
        href={hero.cta.href}
        class="inline-block bg-cm-500 hover:bg-cm-600 text-white text-sm font-semibold py-3 px-6 rounded-md transition"
      >
        {hero.cta.label}
      </a>
    </div>

    <!-- Imagen -->
    <div class="w-full md:w-1/2">
      <Image
      src={HeroImage}
      alt={hero.image.alt} class="rounded-xl shadow-lg w-full h-auto" loading="lazy" />
    </div>
  </div>
</section>

<!-- GSAP Animation -->
<script>
  import gsap from 'gsap';

  gsap.to("#scroll-arrow", {
    y: 10,
    repeat: -1,
    yoyo: true,
    ease: "sine.inOut",
    duration: 1.2
  });

  gsap.from('section h2', {
    opacity: 0,
    y: 40,
    duration: 1,
    delay: 0.2,
    ease: 'power3.out'
  });

  gsap.from('section p', {
    opacity: 0,
    y: 20,
    duration: 1,
    delay: 0.4,
    ease: 'power3.out'
  });

  gsap.from('section a', {
    opacity: 0,
    scale: 0.95,
    duration: 0.8,
    delay: 0.6,
    ease: 'back.out(1.7)'
  });

  gsap.from('section img', {
    opacity: 0,
    x: 50,
    duration: 1,
    delay: 0.6,
    ease: 'power3.out'
  });

for (let i = 0; i < 100; i++) {
  gsap.to(`#dot-${i}`, {
    y: 'random(-20, 20)',
    x: 'random(-20, 20)',
    duration: 'random(3, 6)',
    yoyo: true,
    repeat: -1,
    ease: 'sine.inOut',
    delay: Math.random(),
  });
}
</script>
