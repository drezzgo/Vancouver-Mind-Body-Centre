---
import { Image } from 'astro:assets';
import HeroImage from '../assets/hero.webp';

const {
  headline = "Non nisi commodo nisi ex cillum id",
  description = "Non adipisicing ea est irure nulla ipsum qui sit reprehenderit aliquip anim consectetur. Dolor excepteur excepteur enim amet.",
  cta = {
    label: "Schedule free class",
    href: "#form-container"
  },
  image = {
    src: HeroImage,
    alt: "Eiusmod officia quis occaecat officia mollit mollit officia sint."
  },
  reviewsLink = {
    label: "+500 Reviews â†’",
    href: "https://classpass.com/studios/vancouver-mind-body-centre/reviews"
  }
} = Astro.props;
---

<section id="about" class="w-full px-4 sm:px-6 md:px-16 py-16 md:py-24 bg-white dark:bg-dark">
  <div class="flex flex-col-reverse md:flex-row items-center gap-10 md:gap-16">
    <!-- Bloque de texto -->
    <div class="w-full md:w-1/2 space-y-6 text-center md:text-left">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-white leading-tight">
        {headline}
      </h2>
      <p class="text-base sm:text-lg text-gray-600 dark:text-gray-300">
        {description}
      </p>

      <a
        href={reviewsLink.href}
        target="_blank"
        rel="noopener noreferrer"
        class="block text-sm font-medium text-gym-500 hover:underline"
      >
        {reviewsLink.label}
      </a>

      <a
        href={cta.href}
        class="inline-block bg-gym-500 hover:bg-gym-600 text-white text-sm font-semibold py-3 px-6 rounded-md transition"
      >
        {cta.label}
      </a>
    </div>

    <!-- Imagen -->
    <div class="w-full md:w-1/2 mx-auto md:mx-0">
      <Image
        src={image.src}
        alt={image.alt}
        class="w-full rounded-xl shadow-lg object-cover"
        loading="lazy"
      />
    </div>
  </div>
</section>
