---
// src/components/Footer.astro

const siteName = 'Vancouver Mind Body';
const siteUrl = 'https://vancouvermindbody.com';
const siteDescription = 'Transform your body and mind with free classes, expert trainers, and modern facilities.';
const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: 'Home', href: 'https://vancouvermindbody.com' },
  { label: 'Classes', href: 'https://vancouvermindbody.com/programs/' },
  { label: 'Trainers', href: 'https://vancouvermindbody.com/instructors/' },
  { label: 'Membership', href: 'https://vancouvermindbody.com/#membership' },
  { label: 'Contact', href: 'https://vancouvermindbody.com/contact-us/' }
];

const contactInfo = [
  {
    label: 'info@vancouvermindbody.com',
    href: 'mailto:info@vancouvermindbody.com',
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2" viewBox="0 0 24 24"><path d="M4 4h16v16H4z"/><polyline points="4,4 12,12 20,4"/></svg>`
  },
  {
    label: '+1 (604) 377-3700',
    href: 'tel:+16043773700',
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2" viewBox="0 0 24 24"><path d="M22 16.92v3a2 2 0 0 1-2.18 2A19.86 19.86 0 0 1 3 5.18 2 2 0 0 1 5 3h3a2 2 0 0 1 2 1.72 13.05 13.05 0 0 0 .7 2.81 2 2 0 0 1-.45 2L9 11a16 16 0 0 0 4 4l1.45-1.45a2 2 0 0 1 2-.45 13.05 13.05 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>`
  }
];
---

<footer class="bg-gray-900 text-gray-200">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-2">
        <a href={siteUrl} aria-label={siteName} class="text-2xl font-bold text-white hover:text-gray-100">
          {siteName}
        </a>
        <p class="mt-4 max-w-md text-sm">
          {siteDescription}
        </p>
      </div>

      <!-- Quick Links -->
      <nav aria-label="Quick links">
        <h3 class="text-lg font-semibold text-white mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Contact Us</h3>
        <address class="not-italic space-y-3 text-sm">
          {contactInfo.map(item => (
            <div class="flex items-center">
              <span set:html={item.svg} />
              <a href={item.href} class="hover:text-white transition-colors">
                {item.label}
              </a>
            </div>
          ))}
        </address>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-800 pt-8 text-center text-xs text-gray-500">
      Â© {currentYear} {siteName}. All rights reserved.
    </div>
  </div>

  <!-- Organization JSON-LD -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      name: siteName,
      url: siteUrl,
      description: siteDescription
    })}
  </script>
</footer>
