      })(window,document,'script','dataLayer','GTM-WKGCKCQ6');
    </script>

    <ClientRouter />
  </head>

  <body class="antialiased bg-white text-gray-900 dark:bg-dark dark:text-white">
    <noscript>
      <iframe 
        src="https://www.googletagmanager.com/ns.html?id=GTM-WKGCKCQ6"
        height="0" width="0" style="display:none;visibility:hidden">
      </iframe>
    </noscript>
    <header>
      <Header 
        navLinks={[
          { href: '#about', label: 'About Us' },
          { href: '#team', label: 'Instructors' },
        ]}
        ctaLabel="Book Now"
      />
    </header>

    <main id="main-content">
      <slot />
    </main>

